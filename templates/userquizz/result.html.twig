{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="card mt-0">
            <div class="card-body">
                <div class="card-text">
                    <div class="text-center mb-5">
                        <div class="text-center text-8xl {{ userQuizz.result.success ? 'text-success' : 'text-error' }}">
                            <i class="fas {{ userQuizz.result.success ? 'fa-thumbs-up' : 'fa-thumbs-down' }}"></i>
                        </div>

                        <div class="text-4xl">
                            {{ (userQuizz.result.success ? 'quizz.result.success.title' : 'quizz.result.error.title') | trans }}
                        </div>

                        <div class="text-xl">
                            {{ (userQuizz.result.success ? 'quizz.result.success.message' : 'quizz.result.error.message') | trans }}
                        </div>
                    </div>

                    <div>

                        {% for userQuestionField in form.userQuestions %}
{#                            <div class="question" data-userquizz-target="question">#}
{#                                <div class="card-title">#}
{#                                    {{ userQuestionField.vars.question.value }}#}
{#                                </div>#}
{#                                <div class="card-text">#}
{#                                    {{ form_row(userQuestionField.answers) }}#}
{#                                </div>#}
{#                            </div>#}

                        <div class="question-result {{ userQuestionField.vars.value.result.valid ? 'success' : 'error' }}">
                            <div class="title">{{ (userQuestionField.vars.value.result.valid ? 'Correct' : 'Incorrect') | trans }}</div>
                            <div class="question">{{ userQuestionField.vars.question.value }}</div>
                            {{ form_row(userQuestionField.answers) }}
                        </div>
                        {% endfor %}
                    </div>

                </div>
            </div>

            <div class="card-link text-center">
                <a href="{{ path('dashboard') }}" class="btn btn-primary">
                    Revenir au tableau de bord
                </a>
            </div>
        </div>
    </div>
{% endblock %}
